*{
  padding 0
  margin 0
  box-sizing border-box
}
ul
  list-style none
@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,500');
body
  font-family: 'Roboto', sans-serif;
  font-size 100%
header 
  width 100%
  height auto
  display inline-block
  background-color #000
  margin-bottom 10px
  h1
    width 100%
    height auto
    padding 20px 0
    font-size 1.2em
    font-weight 500
    color #FFF
    text-align center
    text-transform uppercase
.container
  width 100%
  height auto
.info-dashboard
  width 100%
  height auto
  display inline-block  
  p
    width 100%
    height auto
    margin-bottom 10px
    font-size .8em
    font-weight 300
    color #000000
    text-align center
.main
  width 100%
  padding 0 4%
  max-width 1400px
  margin 0 auto
  h2
    width 100%
    height auto
    margin 5% 0
    position relative
    font-size 1.2em
    font-weight 500
    color rgba(14, 20, 26, 0.8)
    text-align center
    &:after
      content ""
      width 40%
      height 3px
      position absolute
      bottom -15px
      left calc(50% - 20%)
      background-color #e2e1e1
  ul
    width 100%
    display inline-block
    li
      width 100%
      margin-top 5%
.box-actions
  width 100%
  height auto
  display inline-block
  box-shadow 0 2px 8px rgba(14,20,26,0.1)
  border 1px solid rgba(14,20,26,0.1)
  padding 4%
  &.value-positive
    border: 1px solid #04B404
  &.value-negative
    border: 1px solid #B40404
  &--symbol
    width 100%
    height auto
    padding 2% 0
    text-align center
    display inline-block
    font-size 1em
    font-weight 500
    color rgba(0, 0, 0, 1)
    border-bottom 1px solid #e2e1e1
    span 
      width 100%
      height auto
      display inline-block
      font-size .9em
      margin-bottom 5px
  &--percentage
    display inline
    &.value-positive
      color #04B404
    &.value-negative
      color #B40404
  &--refreshed
    width 100%
    height auto
    padding 2% 0
    text-align center
    display inline-block
    font-size .8em
    font-weight 500
    color rgba(0, 0, 0, 1)
    border-bottom 1px solid #e2e1e1
  &--values
    li
      height auto
      padding 2% 0
      text-align center
      float left 
      font-size .9em
      font-weight 400
      color rgba(0, 0, 0, 1)
      border-bottom 1px solid #e2e1e1
      span
        font-weight 500
        font-size .8em
      &:nth-child(1),
      &:nth-child(2),
      &:nth-child(3),
      &:nth-child(4)
        width 50%
        margin-right 0 !important
      &:nth-child(5)
        width 100%
        border-bottom 0px
@media screen and (min-width 700px)
  .main
    ul
      li
        width 49%
        margin-right 1%
        margin-top 1%
        &:nth-child(2n)
          margin-right 0%
@media screen and (min-width 1000px)
  .main
    padding 0 2%
    h2
      font-size 1.6em
    ul
      li
        width 32.6%
        &:nth-child(2n)
            margin-right 1%
        &:nth-child(3n)
            margin-right 0%

  .info-dashboard
    p
      font-size 1.1em
  .box-actions
    padding 0 1%

@media screen and (min-width 1280px)
  .main
    ul
      li
        width 24.2%
        &:nth-child(2n)
          margin-right 1%
        &:nth-child(3n)
          margin-right 1%
        &:nth-child(4n)
          margin-right 0%
