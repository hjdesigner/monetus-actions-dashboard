*{
  padding 0
  margin 0
  box-sizing border-box
}
@import url('https://fonts.googleapis.com/css?family=Roboto:300,400,500');
body
  font-family: 'Roboto', sans-serif;
  font-size 100%
.container
  width 100%
  height auto
.info-dashboard
  width 100%
  height 170px
  display inline-block
  background-image url('../images/day-22.jpg');
  padding 0 4%
  background-size cover
  position relative
  display flex
  justify-content center
  align-items center
  &-content
    width 90%
    height auto
    background-color rgba(255, 255, 255, .8)
    padding 5%
    border-radius 10px
  h1
    width 100%
    height auto
    font-size 1.2em
    font-weight 500
    color #000000
    text-align center
  p
    width 100%
    height auto
    margin-top 2%
    font-size .8em
    font-weight 300
    color #000000
    text-align center

.main
  width 100%
  padding 0 4%